[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = less -F -X
[alias]
  i = log -1
  amend = commit --amend -C @
  ci = commit
  co = checkout
  st = status --short
  br = branch
  frob = !git rebase -i "$(git merge-base @ origin/master)"
  co-green = !git checkout "$(script/ci_last_green_master)"
  rebase-green = !git rebase "$(script/ci_last_green_master)"
[push]
  default = simple
[pull]
  rebase = true
[color]
  ui = true
